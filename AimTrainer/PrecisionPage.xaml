<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AimTrainer.PrecisionPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <Grid>
                <ActivityIndicator
                    x:Name="Loading"
                    IsRunning="True"
                    IsVisible="False"
                    Color="LightBlue"
                    HorizontalOptions="Center"
                    HeightRequest="150"
                    WidthRequest="150"/>
                <Label
                    x:Name="Countdown"
                    Text="3"
                    FontSize="100"
                    HorizontalTextAlignment="Center"
                    IsVisible="False"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
